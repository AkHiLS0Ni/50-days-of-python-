print(a is b)
print(a is not b)
result = 10 + 2 * 3
print(result)   # 16 (Multiplication first)

result2 = (10 + 2) * 3
print(result2)  # 36 (Parentheses first)
# Associativity and Precedence Demonstration

# Left to Right Associativity
print("Left to Right Associativity:")

print("20 - 5 - 3 =", 20 - 5 - 3)      # (20 - 5) - 3
print("100 / 10 * 2 =", 100 / 10 * 2)  # (100 / 10) * 2
print("10 + 2 * 3 =", 10 + 2 * 3)      # Multiplication first (precedence)

print("\nRight to Left Associativity:")

print("2 ** 3 ** 2 =", 2 ** 3 ** 2)    # 2 ** (3 ** 2)

# Assignment (Right to Left)
a = b = c = 10
print("a =", a, "b =", b, "c =", c)

# Logical Operators (Left to Right)
print("\nLogical Operators:")
print("True and False or True =", True and False or True)
length = int(input("Enter Length: "))
breadth = int(input("Enter Breadth: "))

area = length * breadth

print("Area:", area)
