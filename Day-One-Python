# Arithmetic Operation
# Assign values
a = 14
b = 4

# Addition
print("Addition:", a + b)

# Subtraction
print("Subtraction:", a - b)

# Multiplication
print("Multiplication:", a * b)

# Division (float result)
print("Division:", a / b)

# Floor Division (integer division)
print("Floor Division:", a // b)

# Modulus (remainder)
print("Modulus:", a % b)

# Exponentiation (power)
print("Exponentiation:", a ** b)
# Expressions
a = 10
b = 3

print(a + b)   # Addition
print(a - b)   # Subtraction
print(a * b)   # Multiplication
print(a / b)   # Division
print(a // b)  # Floor Division
print(a % b)   # Modulus
print(a ** b)  # Power
a = 10
b = 5

print(a > b)
print(a < b)
print(a >= b)
print(a <= b)
print(a == b)
print(a != b)
x = True
y = False

print(x and y)
print(x or y)
print(not x)
